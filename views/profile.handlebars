<main class="dashboard">
  <div class="header-row" id="header-row" style="padding: 0px; overflow:hidden; max-height: 500px;">
    <div class="container-fluid" style="padding: 0px;">
      <div class="row">
        <div class="col-xs-12" style="position: relative;">
          <div class="username text-center text-uppercase">
            {{!-- <h3> Welcome back</h3> --}}
            <h2 style="z-index: 1060; padding-left: 45px;">
              {{profileObject.user.firstname}} {{profileObject.user.lastname}}
            </h2>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-sm-1"></div>
    <div class="col-md-3">
      <div class="card-user bg-transparent">
        <div class="card border-primary" style="padding: 20px;">
          <h5 class="card-title text-uppercase text-center">About {{profileObject.user.firstname}}</h5>
          {{!-- ____________________________CALL FROM THE DATA BASE THE 3 MOST RECENT FAVORITED COURSES________________
          --}}
          <p class="card-text text-center">1 Favorite Course</p>
          <p class="card-text text-center">2 Favorite Course</p>
          <p class="card-text text-center">3 Favorite Course</p>
          <p class="card-text text-center">Best Score: -4</p>
        </div>
      </div>
    </div>

    <div class="col-md-2">
      <div class="card bg-transparent text-uppercase" style="border: none;">
        <div class="card-body">
          {{!-- ______________________________CALL FROM THE DATA BASE FOR ALL USERS FAVORITED COURSES________________
          --}}
          <a href="/profile/favorited" class="btn text-white">Favorite Courses</a>
        </div>
      </div>
    </div>

    <div class="col-md-2">
      <div class="card bg-transparent text-uppercase" style="border: none;">
        <div class="card-body">
          {{!-- __________________________CALL FROM THE DATA BASE FOR ALL USERS SAVED COURSES_______________________
          --}}
          <a href="profile/saved" class="btn text-white">Saved Courses</a>
        </div>
      </div>
    </div>

    <div class="col-md-2">
      <div class="card bg-transparent text-uppercase" style="border: none;">
        <div class="card-body">
          {{!-- ____________________________CALL FROM THE DATA BASE FOR ALL USERS RATED COURSES____________________ --}}
          <a href="#" class="btn btn1 text-white">Rated Courses</a>
        </div>
      </div>
    </div>
    <div class="col-sm-1"></div>
  </div>

